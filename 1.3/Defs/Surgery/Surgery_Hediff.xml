<!-- Tail Blade -->

<HediffDef ParentName="AddedBodyPartBase">
    <defName>KurinTailBlade</defName>
    <label>kurin tail blade</label>
    <labelNoun>a kurin tail blade</labelNoun>
    <description>An installed Kurin Tail Blade.</description>
    <descriptionHyperlinks><ThingDef>KurinTailBlade</ThingDef></descriptionHyperlinks>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
			<li>
				<label>blade</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<armorPenetration>0.25</armorPenetration>
				<power>10</power>
				<cooldownTime>1</cooldownTime>
			</li>
			<li>
				<label>point</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<armorPenetration>0.3</armorPenetration>
				<power>12</power>
				<cooldownTime>1</cooldownTime>
			</li>
        </tools>
      </li>
    </comps>
    <spawnThingOnRemoved>KurinTailBlade</spawnThingOnRemoved>
    <addedPartProps>
      <isGoodWeapon>true</isGoodWeapon>
      <solid>true</solid>
      <partEfficiency>1.00</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
  </HediffDef>

</Defs>
