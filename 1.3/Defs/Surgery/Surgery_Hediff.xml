<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<HediffDef ParentName="AddedBodyPartBase">
	<defName>Kurin_FakeTail</defName>
	<label>fake kurin tail</label>
	<labelNoun>a fake kurin tail</labelNoun>
	<description>A fake kurin tail to restore one's three tailed beauty. Because it can't move, balanced walking and running is impaired.</description>
	<spawnThingOnRemoved>Kurin_FakeTail</spawnThingOnRemoved>
	<stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.02</offset>
          </li>
        </capMods>
      </li>
    </stages>
	<addedPartProps>
		<solid>true</solid>
		<partEfficiency>1.0</partEfficiency>
	</addedPartProps>
</HediffDef>

<HediffDef ParentName="AddedBodyPartBase">
	<defName>Kurin_BionicTail</defName>
	<label>bionic kurin tail</label>
	<labelNoun>a bionic kurin tail</labelNoun>
	<description>A bionic kurin tail.</description>
	<spawnThingOnRemoved>Kurin_BionicTail</spawnThingOnRemoved>
	<stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.02</offset>
          </li>
        </capMods>
      </li>
    </stages>
	<addedPartProps>
		<solid>true</solid>
		<partEfficiency>1</partEfficiency>
	</addedPartProps>
</HediffDef>

