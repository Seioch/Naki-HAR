    <AbilityDef ParentName="PsycastBase">
        <defName>Naki_Disintegrate_Medium</defName>
        <label>disintegrate</label>
        <description>Implants a grain of dark matter in the target, causing flesh to decay rapidly.</description>
        <level>1</level>
        <iconPath>Naki/Psycasts/Disintegrate</iconPath>
        <verbProperties>
            <range>14.9</range>
        </verbProperties>
        <statBases>
            <Ability_EntropyGain>10</Ability_EntropyGain>
            <Ability_PsyfocusCost>0.05</Ability_PsyfocusCost>
        </statBases>
        <comps>
            <li Class = "CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>DMDisintegration</hediffDef>
                <psychic>False</psychic>
            </li>
        </comps>
    </AbilityDef> 

    <AbilityDef ParentName="PsycastBase">
        <defName>Naki_MassFog</defName>
        <label>mass fog</label>
        <description>Induce noise in the visual centers of the brain, obscuring vision of everyone near the target point.</description>
        <level>2</level>
        <iconPath>Naki/Psycasts/MassFog</iconPath>
        <writeCombatLog>True</writeCombatLog>
        <!-- <hotKey>Misc5</hotKey> -->
        <statBases>
            <Ability_EntropyGain>30</Ability_EntropyGain>
            <Ability_PsyfocusCost>0.25</Ability_PsyfocusCost>
            <Ability_Duration>20</Ability_Duration>
            <Ability_EffectRadius>3.9</Ability_EffectRadius>
        </statBases>
        <verbProperties>
        <warmupTime>1</warmupTime>
        <range>24.9</range>
        <targetParams>
            <canTargetSelf>True</canTargetSelf>
            <canTargetAnimals>True</canTargetAnimals>
            <canTargetLocations>True</canTargetLocations>
        </targetParams>
        </verbProperties>
        <comps>
        <li Class = "CompProperties_AbilityGiveHediff">
            <compClass>CompAbilityEffect_GiveHediff</compClass>
            <hediffDef>DMConfusion</hediffDef>
            <onlyBrain>False</onlyBrain>
            <psychic>False</psychic>
            <goodwillImpact>-25</goodwillImpact>
            <applyGoodwillImpactToLodgers>False</applyGoodwillImpactToLodgers>
        </li>
        <li Class="CompProperties_AbilityFleckOnTarget">
            <fleckDef>PsycastPsychicEffect</fleckDef>
        </li>
    </comps>
  </AbilityDef>

