<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseMakeableGun">
	<defName>Naki_Gun_Charge_Rifle</defName>
	<label>naki charge rifle</label>
	<description>A charge rifle that fires anti-matter rounds. An unstable miniature black hole core provides the ammo. When depleted, the black hole core annihilates the gun.</description>
	<graphicData>
		<texPath>Naki/Weapon/Charge_Rifle/Texture</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<soundInteract>Interact_ChargeRifle</soundInteract>
	<statBases>
		<WorkToMake>48000</WorkToMake>
		<Mass>3.0</Mass>
		<AccuracyTouch>0.55</AccuracyTouch>
		<AccuracyShort>0.75</AccuracyShort>
		<AccuracyMedium>0.75</AccuracyMedium>
		<AccuracyLong>0.65</AccuracyLong>
		<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
	</statBases>
	<weaponTags>
		<!-- Should not have a standard tag because it should not spawn naturally -->
		<li>NakiGun</li>
	</weaponTags>
	<costList>
		<Plasteel>75</Plasteel>
		<ComponentSpacer>5</ComponentSpacer>
		<NakiDarkMatter>27</NakiDarkMatter>
	</costList>
	<comps>
		<!-- Special comp to decrement remaining ammo, destroy on empty, and display ammo remaining -->
		<li Class="Naki_HAR.CompProperties_CompNakiWeapons">
			<maximumShots>60</maximumShots>
		</li>
	</comps>
	<recipeMaker>
		<researchPrerequisite>Naki_ranged_weapons</researchPrerequisite>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
        <recipeUsers Inherit="False">
            <li>Naki_Fabricator</li>
        </recipeUsers>
	</recipeMaker>
	<!-- Custom verb to count shots -->
	<verbs>
		<li>
			<verbClass>Naki_HAR.Verb_NumberedShoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Naki_Bullet_Charge_Rifle</defaultProjectile>
			<warmupTime>1.0</warmupTime>
			<range>30.9</range>
			<burstShotCount>2</burstShotCount>
			<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
			<soundCast>Naki_Shot_Charge_Rifle</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</li>
	</verbs>

	<tools>
		<li>
			<label>stock</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
		<li>
			<label>barrel</label>
			<capacities>
				<li>Blunt</li>
				<li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
	</tools>
</ThingDef>

<ThingDef ParentName="BaseBullet">
	<defName>Naki_Bullet_Charge_Rifle</defName>
	<label>Naki charge rifle bullet</label>
	<projectile>
		<damageDef>Bullet</damageDef>
		<damageAmountBase>18</damageAmountBase>
		<stoppingPower>1.8</stoppingPower>
		<armorPenetrationBase>0.6</armorPenetrationBase>
		<speed>100</speed>
	</projectile>
	<graphicData>
		<texPath>Naki/Weapon/Rifle_Bullet/Texture</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
</ThingDef>

<SoundDef>
	<defName>Naki_Shot_Charge_Rifle</defName>  
	<context>MapOnly</context>  
	<maxSimultaneous>1</maxSimultaneous>  
	<subSounds>
		<li>
			<grains>
				<li Class="AudioGrain_Clip">
					<clipPath>Naki/Naki_Rifle</clipPath>
				</li>
			</grains>      
			<volumeRange>35~45</volumeRange>
		</li>
	</subSounds>
</SoundDef>

</Defs>